{
    "name": "@parse5/build-scripts",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@types/dedent": "^0.7.0",
        "@types/jest": "^27.0.2",
        "@typescript-eslint/eslint-plugin": "^5.9.0",
        "@typescript-eslint/parser": "^5.9.0",
        "dedent": "^0.7.0",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-unicorn": "^40.0.0",
        "husky": "^7.0.4",
        "jest": "^27.4.7",
        "lerna": "^4.0.0",
        "lint-staged": "^11.2.6",
        "prettier": "^2.4.1",
        "ts-jest": "^27.1.2",
        "typescript": "^4.5.4"
    },
    "scripts": {
        "build": "lerna run build",
        "prettier": "prettier '{packages/*/{lib,test}/**/*.js,{bench,test,scripts}/**/*.js}'",
        "format": "npm run format:es && npm run format:prettier",
        "format:es": "npm run lint:es -- --fix",
        "format:prettier": "npm run prettier -- --write",
        "lint": "npm run lint:es && npm run lint:prettier",
        "lint:es": "eslint .",
        "lint:prettier": "npm run prettier -- --check",
        "unit-tests": "NODE_OPTIONS=--experimental-vm-modules jest",
        "test": "npm run lint && npm run unit-tests",
        "generate-feedback-tests": "node --loader ts-node/esm scripts/generate-parser-feedback-test/index.ts test/data/html5lib-tests/tree-construction/*.dat test/data/tree-construction-regression/*.dat",
        "bench-perf": "cd bench && npm install && node perf/index.js",
        "bench-memory-sax": "cd bench && npm install && node memory/sax-parser.js",
        "preversion": "npm test",
        "pre-commit": "lint-staged",
        "publish": "lerna publish",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,json}": [
            "prettier --write",
            "git add"
        ]
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts-esm",
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "testEnvironment": "node",
        "coverageProvider": "v8",
        "globals": {
            "ts-jest": {
                "useESM": true
            }
        },
        "moduleNameMapper": {
            "^@parse5/(.*)/lib/(.*)(?:\\.js)$": "<rootDir>/packages/$1/lib/$2",
            "^parse5/lib/(.*)(?:\\.js)$": "<rootDir>/packages/parse5/lib/$1",
            "^(\\.{1,2}/.*)\\.js$": "$1"
        }
    }
}
