{
    "private": true,
    "devDependencies": {
        "@types/node": "*",
        "eslint": "^4.19.1",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-prettier": "^2.6.0",
        "husky": "^0.14.3",
        "lerna": "^2.10.2",
        "mocha": "^5.1.1",
        "prettier": "^1.12.0",
        "r2": "^2.0.1"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "prettify": "prettier --write '**/*.js'",
        "lint": "eslint packages test scripts bench",
        "unit-tests": "mocha --ui exports --reporter progress --timeout 20000 test/fixtures/*.test.js",
        "test": "npm run lint && npm run unit-tests",
        "generate-feedback-tests":
            "node scripts/generate-parser-feedback-test test/data/html5lib-tests/tree-construction/*.dat test/data/tree-construction-regression/*.dat",
        "generate-named-entity-data": "node scripts/generate-named-entity-data",
        "bench-perf": "cd bench && npm install && node perf/index.js",
        "bench-memory-named-entities": "cd bench && npm install && node memory/named-entity-data.js",
        "bench-memory-sax": "cd bench && npm install && node memory/sax-parser.js",
        "postinstall": "npm run bootstrap",
        "preversion": "npm test",
        "precommit": "npm run prettify && git add -u",
        "publish": "lerna publish"
    }
}
